<div class="bg-[#1a1d21] p-6 rounded-lg shadow-md border-4 border-transparent hover:border-none transition-all relative ease-in-out mt-8">
  <div class="absolute inset-0 -m-1 rounded-lg bg-gradient-to-br from-blue-500 to-green-400 z-[-1]"></div>
  <h4 class="text-xl font-bold mb-2">Mapa de Impacto por Rutas</h4>

  {{#if this.isLoading}}
    <p class="text-gray-400">Cargando datos del mapa...</p>
    {{log "Cargando datos del mapa..."}}
  {{else if this.error}}
    <p class="text-red-500">Error al cargar el mapa: {{this.error}}</p>
    {{log "Error al cargar el mapa:" this.error}}
  {{else if this.mapaData.length}}
    <ul>
      {{#each this.mapaData as |data|}}
        <li class="text-gray-400">
          Ruta: <span class="font-bold">{{data.via_afectada}}</span>, 
          Impacto Financiero: <span class="font-bold">${{data.impacto_financiero}}</span>
        </li>
      {{/each}}
    </ul>
    {{log "Datos encontrados:" this.mapaData}}
  {{else}}
    <p class="text-gray-400">No se encontraron datos para mostrar.</p>
    {{log "No se encontraron datos"}}
  {{/if}}
</div>
