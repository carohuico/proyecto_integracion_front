<div class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 z-50 {{if this.isClosing "modal-leave" "modal-enter"}}">
  <div class="bg-[#1c1c1c] rounded-xl p-6 w-[512px] max-w-full relative">
    <button type="button" class="absolute top-2 right-2 text-white focus:outline-none" {{on "click" this.closeModal}}>
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>
    <div class="flex flex-col items-center">
      <h2 class="text-white text-[22px] font-bold leading-tight tracking-[-0.015em] text-center pb-3">Detalles del Historial de Crédito</h2>
      <p class="text-white text-base font-normal leading-normal text-center pb-6">Información detallada de la entrada seleccionada.</p>

      <div class="grid grid-cols-2 gap-4 w-full">
        <div class="mb-4">
          <label class="block text-white text-base font-medium leading-normal mb-2">ID Crédito</label>
          <p class="text-white">{{this.args.entry.id}}</p>
        </div>

        <div class="mb-4">
          <label class="block text-white text-base font-medium leading-normal mb-2">ID Cliente</label>
          <p class="text-white">{{this.args.entry.clienteId}}</p>
        </div>

        <div class="mb-4">
          <label class="block text-white text-base font-medium leading-normal mb-2">ID Viaje</label>
          <p class="text-white">{{this.args.entry.viaje}}</p>
        </div>

        <div class="mb-4">
          <label class="block text-white text-base font-medium leading-normal mb-2">Estado</label>
          <p class="text-white">{{this.args.entry.estado}}</p>
        </div>

        <div class="mb-4">
          <label class="block text-white text-base font-medium leading-normal mb-2">Valor Pactado</label>
          <p class="text-white">{{this.args.entry.pactado}}</p>
        </div>

        <div class="mb-4">
          <label class="block text-white text-base font-medium leading-normal mb-2">Valor Pagado</label>
          <p class="text-white">{{this.args.entry.pagado}}</p>
        </div>

        <div class="mb-4">
          <label class="block text-white text-base font-medium leading-normal mb-2">Fecha Pago</label>
          <p class="text-white">{{this.args.entry.fecha}}</p>
        </div>

      </div>

      <div class="flex justify-end gap-4 w-full mt-4">
        <button type="button" class="relative inline-flex items-center justify-center p-0.5 mb-2 overflow-hidden text-sm font-medium text-gray-900 rounded-lg group bg-gradient-to-br from-pink-500 to-orange-400 group-hover:from-pink-500 group-hover:to-orange-400 hover:text-white dark:text-white focus:ring-4 focus:outline-none focus:ring-pink-200 dark:focus:ring-pink-800" {{on "click" this.editEntry}}>
          <span class="relative px-4 py-1 transition-all duration-300 ease-in-out bg-[#1b2227] rounded-md group-hover:bg-opacity-0 group-hover:opacity-100">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
            </svg>
          </span>
        </button>
        <button type="button" class="relative inline-flex items-center justify-center p-0.5 mb-2 overflow-hidden text-sm font-medium text-gray-900 rounded-lg group bg-gradient-to-br from-pink-500 to-orange-400 group-hover:from-pink-500 group-hover:to-orange-400 hover:text-white dark:text-white focus:ring-4 focus:outline-none focus:ring-pink-200 dark:focus:ring-pink-800" {{on "click" this.deleteEntry}}>
          <span class="relative px-4 py-1 transition-all duration-300 ease-in-out bg-[#1b2227] rounded-md group-hover:bg-opacity-0 group-hover:opacity-100">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9M4.772 5.79a48.108 48.108 0 0 0-3.478-.397m16.95 0a48.11 48.11 0 0 1-3.478.397M5.25 6v-.916a2.25 2.25 0 0 1 2.09-2.201h7.32" />
            </svg>
          </span>
        </button>
      </div>
    </div>
  </div>
</div>