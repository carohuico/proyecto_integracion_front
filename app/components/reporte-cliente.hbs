<div class="report-card">
  <h3 class="text-white">Actividad Financiera del Cliente</h3>

  {{!-- Tabla para mostrar los resultados --}}
  {{#if @reporteCliente.length}}
    <table class="min-w-full divide-y divide-gray-700 mt-4">
      <thead class="bg-[#1b2227]">
        <tr>
          <th class="text-left text-white px-4 py-2">ID Crédito</th>
          <th class="text-left text-white px-4 py-2">Valor Pactado</th>
          <th class="text-left text-white px-4 py-2">Estado Crédito</th>
          <th class="text-left text-white px-4 py-2">Valor Pagado</th>
          <th class="text-left text-white px-4 py-2">Nombre Cliente</th>
        </tr>
      </thead>
      <tbody>
        {{#each @reporteCliente as |credito|}}
          <tr>
            <td class="px-4 py-2">{{credito.id_credito}}</td>
            <td class="px-4 py-2">{{credito.valor_pactado}}</td>
            <td class="px-4 py-2">{{credito.estado_credito}}</td>
            <td class="px-4 py-2">{{credito.valor_pagado}}</td>
            <td class="px-4 py-2">{{credito.nombre_1}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{else}}
    <p class="text-white mt-4">No se encontraron créditos para este cliente.</p>
  {{/if}}
</div>
