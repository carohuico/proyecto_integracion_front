<div class="relative flex items-center justify-center min-h-screen bg-[#111518]" style='font-family: "Public Sans", "Noto Sans", sans-serif;'>
  <div class="w-[512px] max-w-[512px] bg-[#1c1c1c] rounded-xl p-6">
    <div class="flex flex-col items-center">
      <h1 class="text-white text-[22px] font-bold leading-tight tracking-[-0.015em] text-center pb-3">¡Bienvenido de nuevo!</h1>
      <p class="text-white text-base font-normal leading-normal text-center pb-6">Inicia sesión en tu cuenta para continuar.</p>

      <form {{on "submit" this.login}} class="w-full">
        <div class="w-full mb-4">
          <label class="block text-white text-base font-medium leading-normal mb-2">Usuario</label>
          <input
            type="text"
            placeholder="Usuario"
            class="w-full h-14 p-4 rounded-xl bg-[#283139] text-white placeholder:text-[#9cacba] border-none focus:outline-none focus:ring-0"
            {{on "input" this.updateUsername}}
          />
        </div>

        <div class="w-full mb-4">
          <label class="block text-white text-base font-medium leading-normal mb-2">Contraseña</label>
          <input
            type="password"
            placeholder="Contraseña"
            class="w-full h-14 p-4 rounded-xl bg-[#283139] text-white placeholder:text-[#9cacba] border-none focus:outline-none focus:ring-0"
            {{on "input" this.updatePassword}}
          />
        </div>

        <div class="flex justify-center gap-4">
          <button type="submit" class="text-white bg-gradient-to-br from-pink-500 to-orange-400 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-pink-200 dark:focus:ring-pink-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center">Iniciar sesión</button>
        </div>
      </form>
    </div>
  </div>
</div>