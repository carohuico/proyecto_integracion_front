<div class="relative flex min-h-screen flex-col bg-[#111518] overflow-x-hidden mt-16">
  <div class="container flex h-full grow flex-col px-4 py-8">
    {{navbar/navbar}}

    <p class="text-white text-4xl font-bold leading-tight tracking-tight w-full mb-4">Módulo de analítica</p>
    <p class="text-gray-400 text-lg mb-8">Análisis de datos y visualización de información para la toma de decisiones.</p>

    <!-- Contenedor grid para las gráficas en fila -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8"> <!-- Grid con dos columnas en pantallas medianas y grandes -->
      <!-- Primer contenedor (tabla 1) -->
      <div class="bg-[#1a1d21] p-6 rounded-lg shadow-md border-4 border-transparent hover:border-none transition-all">
        <h2 class="text-white text-1xl font-bold mb-4">Impacto Económico por Cierres Viales</h2>
        <canvas id="impacto-economico-chart" width="400" height="200"></canvas>
      </div>

      <!-- Segundo contenedor (tabla 2) -->
      <div class="bg-[#1a1d21] p-6 rounded-lg shadow-md border-4 border-transparent hover:border-none transition-all">
        <h2 class="text-white text-1xl font-bold mb-4">Riesgo de Crédito por Ruta</h2>
        <canvas id="riesgo-credito-chart" width="400" height="200"></canvas>
      </div>
    </div>

    <!-- Contenedor grid para las gráficas en fila -->
    <div class="bg-[#1a1d21] p-6 rounded-lg shadow-md border-4 border-transparent hover:border-none transition-all mb-8">
      <h2 class="text-white text-2xl font-bold mb-4">Mapa de eficiencia</h2>
      <Graficos::MapaEficiencia />
    </div>

    <div class="bg-[#1a1d21] p-6 rounded-lg shadow-md border-4 border-transparent">
      <h2 class="text-white text-2xl font-bold mb-4">Créditos vs. Pagos</h2>
        <p class="text-gray-400 mb-4">Tendencia de créditos otorgados y pagos realizados en un periodo.</p> 
      <Graficos::CreditosPagos />
    </div>
  </div>
</div>